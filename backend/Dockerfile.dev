FROM golang:1.23-alpine

# Install air for hot reloading
RUN go install github.com/cosmtrek/air@latest

WORKDIR /app/backend

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy air configuration
COPY .air.toml ./

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Start development server with air
CMD ["air"] 